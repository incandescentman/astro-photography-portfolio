---
import siteConfig from '../../site.config.mts';
import SocialIcon from './SocialIcon.astro';

const year = new Date().getFullYear();
const owner = siteConfig.owner;
const socialLinks = siteConfig.socialLinks;
---

<footer class="py-12 mt-auto" style="border-top: 1px solid rgba(229, 229, 229, 0.6); background: rgba(250, 250, 250, 0.5); backdrop-filter: blur(8px);">
	<div class="container mx-auto px-6">
		<div class="flex flex-col md:flex-row justify-between items-center gap-6">
			<p class="text-sm font-sans mb-0" style="color: var(--neutral-600);">
				Â© {year}
				{owner}. All rights reserved.
			</p>

			<div class="flex gap-3">
				{socialLinks.map((socialLink) => <SocialIcon socialLink={socialLink} />)}
			</div>
		</div>
	</div>
</footer>
