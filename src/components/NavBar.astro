---
import siteConfig from '../../site.config.mts';

const title = siteConfig.title;

const base = import.meta.env.BASE_URL || '';
const menuItems = [
	{ name: 'Red Carpet Photos', link: `/gallery` },
	{ name: 'The Story of WikiPortraits', link: `/wikiportraits-story` },
	{ name: 'About', link: `/about` },
	{ name: 'Contact', link: `mailto:jay@jaydixit.com` },
	{ name: 'jaydixit.com', link: 'https://jaydixit.com' },
];

const socialLinks = [
	{ name: 'Twitter', url: 'https://twitter.com/jaydixit', icon: 'ùïè' },
	{ name: 'LinkedIn', url: 'https://linkedin.com/in/jaydixit', icon: 'in' },
	{ name: 'Instagram', url: 'https://instagram.com/jaydixit', icon: 'üì∑' },
];
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@400;500;600;700;800;900&family=Dancing+Script:wght@400..700&display=swap"
	rel="stylesheet"
/>

<nav
	x-data="{ isOpen: false, scrolled: false }"
	@scroll.window="scrolled = window.scrollY > 20"
	class="fixed top-0 left-0 w-full z-50 transition-all duration-500 ease-in-out"
	:class="scrolled ? 'bg-white/95 backdrop-blur-md shadow-lg py-4' : 'bg-white/80 backdrop-blur-sm py-6'"
>
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
		<!-- Logo and Wordmark -->
		<a href="/" class="flex items-center gap-3 group">
			<div class="relative">
				<img src="/logo.png" alt="Jay Dixit Logo" class="w-12 h-12 md:w-14 md:h-14 object-contain rounded-lg transition-transform duration-300 group-hover:scale-105" />
				<div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
			</div>
			<div class="flex flex-col md:flex-row md:items-baseline md:gap-2">
				<span class="text-2xl md:text-3xl font-black tracking-tight text-gray-900" style="font-family: 'Inter', system-ui, -apple-system, sans-serif;">
					Jay Dixit
				</span>
				<span class="text-2xl md:text-3xl font-black tracking-tight text-gray-900" style="font-family: 'Inter', system-ui, -apple-system, sans-serif;">
					Photos
				</span>
			</div>
		</a>

		<!-- Desktop Menu -->
		<div class="hidden lg:flex items-center gap-2">
			{
				menuItems.map((item, index) => (
					<a
						href={item.link}
						class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 hover:bg-gray-100 ${
							index === 0 ? 'text-blue-600 hover:text-blue-700' : 'text-gray-700 hover:text-gray-900'
						}`}
						target={item.link.startsWith('http') ? '_blank' : '_self'}
					>
						{item.name}
					</a>
				))
			}
			
			<!-- Social Links -->
			<div class="flex items-center gap-1 ml-4 pl-4 border-l border-gray-200">
				{
					socialLinks.map((social) => (
						<a
							href={social.url}
							target="_blank"
							class="w-9 h-9 rounded-full flex items-center justify-center text-gray-500 hover:text-gray-900 hover:bg-gray-100 transition-all duration-300"
							title={social.name}
						>
							<span class="text-lg">{social.icon}</span>
						</a>
					))
				}
			</div>
		</div>

		<!-- Mobile Menu Button -->
		<button @click="isOpen = !isOpen" class="lg:hidden p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gray-200">
			<svg x-show="!isOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
			<svg x-show="isOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M6 18L18 6M6 6l12 12"></path>
			</svg>
		</button>
	</div>

	<!-- Mobile Menu -->
	<div x-show="isOpen" 
		x-transition:enter="transition ease-out duration-300"
		x-transition:enter-start="opacity-0 -translate-y-2"
		x-transition:enter-end="opacity-100 translate-y-0"
		x-transition:leave="transition ease-in duration-200"
		x-transition:leave-start="opacity-100 translate-y-0"
		x-transition:leave-end="opacity-0 -translate-y-2"
		class="lg:hidden absolute top-full left-0 w-full bg-white/95 backdrop-blur-md shadow-xl border-t border-gray-100">
		<div class="flex flex-col py-4 px-6 space-y-2">
			{
				menuItems.map((item, index) => (
					<a 
						href={item.link} 
						class={`px-4 py-3 rounded-lg text-base font-medium transition-all duration-300 hover:bg-gray-50 ${
							index === 0 ? 'text-blue-600' : 'text-gray-700'
						}`}
						@click="isOpen = false"
						target={item.link.startsWith('http') ? '_blank' : '_self'}
					>
						{item.name}
					</a>
				))
			}
			
			<!-- Mobile Social Links -->
			<div class="flex items-center justify-center gap-2 pt-4 mt-2 border-t border-gray-200">
				{
					socialLinks.map((social) => (
						<a
							href={social.url}
							target="_blank"
							class="w-10 h-10 rounded-full flex items-center justify-center text-gray-500 hover:text-gray-900 hover:bg-gray-100 transition-all duration-300"
							title={social.name}
						>
							<span class="text-lg">{social.icon}</span>
						</a>
					))
				}
			</div>
		</div>
	</div>
</nav>
