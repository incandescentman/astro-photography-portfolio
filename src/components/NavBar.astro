---
import siteConfig from '../../site.config.mts';

const title = siteConfig.title;

const base = import.meta.env.BASE_URL || '';
const menuItems = [
	{ name: 'Red Carpet Photos', link: `/gallery` },
	{ name: 'The Story of WikiPortraits', link: `/wikiportraits-story` },
	{ name: 'About', link: `/about` },
	{ name: 'Contact', link: `mailto:jay@jaydixit.com` },
	{ name: 'jaydixit.com', link: 'https://jaydixit.com' },
];

const socialLinks = [
	{ name: 'Twitter', url: 'https://twitter.com/jaydixit', icon: 'ùïè' },
	{ name: 'LinkedIn', url: 'https://linkedin.com/in/jaydixit', icon: 'in' },
	{ name: 'Instagram', url: 'https://instagram.com/jaydixit', icon: 'üì∑' },
];
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@400;500;600;700;800;900&family=Dancing+Script:wght@400..700&display=swap"
	rel="stylesheet"
/>

<nav
	x-data="{ isOpen: false, scrolled: false }"
	@scroll.window="scrolled = window.scrollY > 50"
	class="fixed top-0 left-0 w-full z-50 transition-all duration-300"
	:class="scrolled ? 'py-3 bg-white shadow-sm' : 'py-5 bg-transparent'"
>
	<div class="container mx-auto flex justify-between items-center">
		<a href="/" id="logo" class="flex items-center gap-3">
			<img src="/logo.png" alt="Jay Dixit Logo" class="w-12 h-12 md:w-16 md:h-16 object-contain" />
			<span class="text-xl md:text-3xl font-bold" style="font-family: system-ui, -apple-system, sans-serif;">Jay Dixit Photos</span>
		</a>

		<!-- Desktop Menu -->
		<div class="hidden md:flex items-center space-x-8">
			{
				menuItems.map((item) => (
					<a
						href={item.link}
						class="nav-link relative after:content-[''] after:absolute after:left-0 after:bottom-[-2px] after:h-[2px] after:bg-black after:w-0 hover:after:w-full transition-all text-sm"
						target={item.link.startsWith('http') ? '_blank' : '_self'}
					>
						{item.name}
					</a>
				))
			}
			
			<!-- Social Links -->
			<div class="flex items-center space-x-3 ml-6 border-l border-gray-300 pl-6">
				{
					socialLinks.map((social) => (
						<a
							href={social.url}
							target="_blank"
							class="text-gray-600 hover:text-black transition-colors text-sm"
							title={social.name}
						>
							{social.icon}
						</a>
					))
				}
			</div>
		</div>

		<!-- Mobile Menu Button -->
		<button @click="isOpen = !isOpen" class="md:hidden text-gray-800 focus:outline-none">
			<svg x-show="!isOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
			<svg x-show="isOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M6 18L18 6M6 6l12 12"></path>
			</svg>
		</button>
	</div>

	<!-- Mobile Menu -->
	<div x-show="isOpen" class="md:hidden absolute top-full left-0 w-full bg-white shadow-md">
		<div class="flex flex-col py-4 px-6 space-y-4">
			{
				menuItems.map((item) => (
					<a 
						href={item.link} 
						class="text-lg" 
						@click="isOpen = false"
						target={item.link.startsWith('http') ? '_blank' : '_self'}
					>
						{item.name}
					</a>
				))
			}
			
			<!-- Mobile Social Links -->
			<div class="flex items-center space-x-4 pt-4 border-t border-gray-200">
				{
					socialLinks.map((social) => (
						<a
							href={social.url}
							target="_blank"
							class="text-gray-600 hover:text-black transition-colors"
							title={social.name}
						>
							{social.icon}
						</a>
					))
				}
			</div>
		</div>
	</div>
</nav>
